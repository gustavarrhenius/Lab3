@model SportsStore.WebUI.Models.MenuModel

@{
    Layout = null;
}

@Html.ActionLink("Home", "List", "Product")
@foreach (var link in Model.categories) {
    @Html.RouteLink(link,
        new {
            controller = "Product",
            action = "List",
            category = link,
            page = 1,
},
        new {
            @class = link ==  @Model.selected ? "selected" : null
}) }

  